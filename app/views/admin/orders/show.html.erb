<h2>注文履歴詳細</h2>

<!--購入情報-->
<table>
  <tr>
    <th>購入者</th>
    <td>
      <%= link_to admin_customer_path(@order) do %>
        <%= @order.public.last_name %>  <%= @order.public.first_name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.postalcode %>  <%= @order.address %><br>
      <%= @order.destination %>
    </td>
  </tr>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.pay %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td>
      <%= form_with model: @order, url: admin_order_path, local: true do |f| %>
        <%= f.select :order_status, ["入金待ち", "入金確認", "製作中", "発送準備中", "発送完了"] %>
        <%= f.submit "更新", class: "btn btn-sm btn-success" %>
      <% end %>
    </td>
  </tr>
</table>

<!--購入商品詳細-->
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.tax_included_price %></td>
        <td><%= order_item.item_quantity %></td>
        <td><%= (order_item.tax_included_price) * (order_item.item_quantity) %></td>
        <%= form_with model: order_item, url: admin_order_item_path(order_item), local: true do |f| %>
          <td><%= f.select :production_status, ["着手不可", "製作待ち", "製作中", "製作完了"] %></td>
          <td><%= f.submit "更新" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<!--商品合計-->
<table>
  <tr>
    <th>商品合計</th>
    <td><%=  %></td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.postage.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>請求金額合計</th>
    <td><%= @order.bill.to_s(:delimited) %></td>
  </tr>
</table>