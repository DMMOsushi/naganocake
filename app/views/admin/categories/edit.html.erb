<div id="header">
  <%= render "layouts/header" %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= form_with model: @category, url: admin_category_path, local: true do |f| %>
        <div class="form-group"><%= f.text_field :name %></div>
        <div class="active"><%= f.submit "変更を保存", class: "btn btn-sm btn-success" %></div>
      <% end %>
    </div>
  </div>
</div>