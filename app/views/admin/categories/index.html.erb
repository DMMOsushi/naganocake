<div class="container my-5">
 <div class="row">
  <div class="col-4 mx-auto">
   <h2 class="table-active text-center">ジャンル追加</h2>
   <%= form_with model: @category, url: admin_categories_path, local: true do |f| %>
     <div class="form-group">
      <%= f.label :"ジャンル名" %><br>
      <%= f.text_field :name %><br>
     </div>
     <div class="form-group">
      <%= f.submit "新規登録", class: "btn btn-success" %>
     </div>
   <% end %>
  </div>
 </div>
 <div class="row">
  <div class="col-4 mx-auto">
    <table class="table table-hover table-inverse table-bordered">
     <h3 class="table-active text-center">ジャンル一覧</h3>
      <tbody>
       <% @categories.each do |category| %>
        <tr>
         <td><%= category.name %></td>
         <td><%= link_to "編集する", edit_admin_category_path(category) %></td>
        </tr>
       <% end %>
      </tbody>
    </table>
   </div>
  </div>
 </div>
</div>



