<div class="container flex-column">
 <div class="row my-3">
  <h3 class="text-center">商品編集</h3>
 </div>
 <div class="row">
  <%= form_with model: @item, url: admin_item_path, local: true do |f| %>

   <div class="form-group">
    <%= f.label :"商品名" %>
    <%= f.text_field :name %>
   </div>

   <div class="form-group">
    <%= f.label :"商品画像" %>
    <%= f.attachment_field :image %>
   </div>

   <div class="form-group">
    <%= f.label :"商品説明" %>
    <%= f.text_area :explanation %>
   </div>

   <div class="form-group">
    <%= f.label :"税抜価格" %>
    <%= f.text_field :tax_excluded_price %>
   </div>

   <div class="form-group">
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "-- 選択してください --"} %>
   </div>

   <div class="form-group">
    <%= f.label :"販売ステータス" %>
    <%= f.select :sale_status, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --" %>
   </div>

   <div class="form-group">
    <%= f.submit '変更を保存' %>
   </div>
  <%end%>
</div>
