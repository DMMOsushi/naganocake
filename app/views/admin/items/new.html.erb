<div class="container mt-5">
 <div class="row">
  <div class="mx-auto">
   <h3 class="table-active text-center">商品新規登録</h3>
   <%= form_with model: @item, url: admin_items_path, local: true do |f| %>

   <div class="form-group">
    <%= f.label :"商品名" %>
    <%= f.text_field :name %>
   </div>

   <div class="form-group">
    <%= f.label :"商品画像" %>
    <%= f.attachment_field :image %>
   </div>

   <div class="form-group">
    <%= f.label :"商品説明" %>
    <%= f.text_area :explanation %>
   </div>

   <div class="form-group">
    <%= f.label :"税抜価格" %>
    <%= f.text_field :tax_excluded_price %>
   </div>

   <div class="form-group">
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "-- 選択してください --"} %>
   </div>

   <div class="form-group">
    <%= f.label :"販売ステータス" %>
    <%= f.select :sale_status, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --" %>
   </div>

   <div>
    <%= f.submit '新規登録', class: "btn btn-success" %>
   </div>
   <%end%>
  </div>
 </div>
</div>



