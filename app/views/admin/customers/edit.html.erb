<div id="header">
  <%= render "layouts/header" %>
</div>
<div class="container">
  <h2>会員情報編集</h2>
  <%= form_with model:@public, url:"/admin/customers/#{@public.id}", local:true do |f| %>


    <%= f.text_field :last_name %>


    <%= f.text_field :first_name %>


    <%= f.text_field :last_kana_name %>


    <%= f.text_field :first_kana_name %>

    <%= f.email_field :email %>


    <%= f.text_field :postalcode %>

    <%= f.text_field :address %>

    <%= f.text_field :telephone %>

    <%= f.submit '変更を保存',class: "btn btn-success" %>


  <% end %>

</div>
