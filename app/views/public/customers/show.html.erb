<div class="customer_body">
  <div class="container">
    <div class="row py-3">
      <div class="col-11 mx-auto">
        <h3 class="customer_heading">マイページ</h3>

        <div class="d-flex mt-3">
          <h5 class="font-weight-bold p-1 mr-3 mb-0">登録情報</h5>
          <%= link_to  edit_public_customer_path, class:"btn btn-sm btn-success shadow mx-3 pt-2" do %>
            <i class="fas fa-user-cog mr-2 mb-1"></i>編集する
          <% end %>
        </div>

        <table class="col-7 table table-bordered mt-3 customer_table shadow">
          <tr>
            <th class="table-secondary">氏名</td>
            <td class="table-light"><%= @public.last_name %>　<%= @public.first_name %></td>
          </tr>
          <tr>
            <th class="table-secondary">カナ</td>
            <td class="table-light"><%= @public.last_kana_name %>　<%= @public.first_kana_name %></td>
          </tr>
          <tr>
            <th class="table-secondary">郵便番号</td>
            <td class="table-light"><%= @public.postalcode %></td>
          </tr>
          <tr>
            <th class="table-secondary">住所</td>
            <td class="table-light"><%= @public.address %></td>
          </tr>
          <tr>
            <th class="table-secondary">電話番号</td>
            <td class="table-light"><%= @public.telephone %></td>
          </tr>
          <tr>
            <th class="table-secondary">メールアドレス</td>
            <td class="table-light"><%= @public.email %></td>
          </tr>
        </table>

        <div class="d-flex col-5 p-0 my-3">
          <h5 class="font-weight-bold p-1 mr-5 mb-0">配送先　</h5>
          <%= link_to public_addresses_path, class:"btn btn-sm btn-primary shadow" do %>
            <i class="fas fa-mail-bulk mr-2"></i>一覧を見る
          <% end %>
        </div>

        <div class="d-flex col-5 p-0">
          <h5 class="font-weight-bold p-1 mr-5 mb-0">注文履歴</h5>
          <%= link_to public_orders_path, class:"btn btn-sm btn-primary shadow" do %>
            <i class="far fa-list-alt mr-2"></i>一覧を見る
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
