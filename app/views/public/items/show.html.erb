<div class="container mt-5">
  <div class="row">
    <%= render 'layouts/category', categories: @categories %>
    <div class="col-4">
      <%= attachment_image_tag @item, :image, size: "250x250" %>
    </div>
    <div class="col-5 ">
      <h2 class="row"><strong><%= @item.name %></strong></h2>
      <h5 class="row"><%= @item.explanation %></h5>
      <div class="row mt-5">
        <h3 class="col-12 p-0">¥<%= ((@item.tax_excluded_price * 1.08).round).to_s(:delimited) %> <span class="h6">(税込)</span></h3>
      </div>
      <% if @item.sale_status == true %>
      <div class="row mt-4">
        <% if public_signed_in? %>
          <div class="col-12 p-0">
            <%= form_with model: @cart_item, url: public_cart_items_path, method: :post, local: true do |f| %>
              <% if public_signed_in? %>
                <%= f.hidden_field :public_id, :value => current_public.id %>
              <% end %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <div class="cart-btn">
                <% number = (1..20).to_a %>
                <%= f.select :cart_quantity, number, class: "item-count" %>
                <%= f.submit "カートに追加する", class: "btn btn-success btn-sm" %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="col-7 text-danger text-center">現在売り切れとなっております</p>
      <% end %>
      </div>
    </div>
  </div>
</div>
