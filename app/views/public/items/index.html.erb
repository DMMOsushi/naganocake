<div>
  <h4>商品一覧（全<%= @items.count %>件）</h4>
 </div>
  <div>
    <% @items.each do |item| %>
      <%= link_to public_item_path(item) do %>
        <div>
            <span>
              <%= attachment_image_tag item, :image, size: "100x100" %>
                <span>
                 <p><%= item.explanation %></p>
                </span>
            </span>
        </div>
      <% end %>
        <div>
          <p>商品名: <%= item.name %></p>
          <p>価格(税込): <%= item.tax_excluded_price.to_s(:delimited) %>円</p>
        </div>
    <% end %>
  </div>s
