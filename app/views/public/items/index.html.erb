
<h3 class="ml-4">商品一覧</h3>
<div class="row">
  <div class="card-deck">
    <% @items.each do |item| %>
      <div class="col-md-6 mx-auto">
        <div class="card my-3 item-index">
          <div class="item-cards">
            <%= link_to public_item_path(item) do %>
              <%= attachment_image_tag item, :image, size: "100x100" %>
            <% end %>
          </div>
          <div class="card-body">
            <p class="card-title item-name"><%= link_to item.name, public_item_path(item) %></p>
            <p class="card-text"><%= ((item.tax_excluded_price * 1.1).round).to_s(:delimited) %> 円</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
